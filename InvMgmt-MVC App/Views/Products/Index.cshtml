@model IEnumerable<InvMgmt_MVC_App.Models.Product>


    <a asp-action="CreateProduct" class="btn btn-secondary">New Product</a>

    @if(Model.Count()==0)
    {
    <p class="alert alert-warning">No Products Found</p>
}
else
{
    <table class="table table-bordered w-25 bg-info">
    @foreach(var item in Model)
    {
      <tr>
          <td>@item.ProductName</td>
          <td>@item.Category</td>
      </tr>
    }
    </table>
}